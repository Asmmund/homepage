<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1><%= t('.header_news')  %></h1>
<% @news.each do |news| %>
<div class="article">
  <span class="date_of_update"><%= humanize(Time.now - news.updated_at) %></span>
  <h3><%= strip_tags(news.title) %></h3>  
  <span class="text">
    <%= strip_tags(news.text) %> 
  </span>
</div>
<% end %>
<br />
<p><%= will_paginate @news %></p>